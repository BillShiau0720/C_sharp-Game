<Window x:Class="Birthday.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Birthday"
        mc:Ignorable="d"
        Title="仙劍豹貓傳"
        WindowState="Maximized"
        Width="1920" Height="1080" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlAcrylicWindowBrush}">

    <Grid>
        <!-- ===== 劇情遊戲層 ===== -->
        <Grid x:Name="GameLayer"
                  Visibility="Collapsed"
                  Panel.ZIndex="20"
                  PreviewMouseDown="GameLayer_PreviewMouseDown">
            <Grid.Resources>


                <!-- 劇情指令清單：仙劍風按鈕 -->
                <Style x:Key="StoryChoiceButtonStyle" TargetType="Button">
                    <!-- 基本字體與對齊 -->
                    <Setter Property="FontFamily" Value="Microsoft JhengHei UI"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="#FFFDF9F0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>

                    <!-- 大一點、比較像選單 -->
                    <Setter Property="Margin" Value="0,6,0,6"/>
                    <Setter Property="Padding" Value="20,18,24,18"/>
                    <Setter Property="MinWidth" Value="260"/>
                    <Setter Property="Height" Value="80"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>

                    <!-- 仙劍風底板：深藍紫漸層 + 金色邊框 -->
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#55202A3E" Offset="0"/>
                                <GradientStop Color="#77304058" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#FFCBB37E"/>
                    <Setter Property="BorderThickness" Value="1.8"/>

                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="ChoiceBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="0"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- 滑鼠移上去：稍微變亮 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ChoiceBorder" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#7739485F" Offset="0"/>
                                                    <GradientStop Color="#9950677F" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="ChoiceBorder" Property="BorderBrush" Value="#FFE6C98A"/>
                                    </Trigger>

                                    <!-- 按下去：更亮 & 邊框加粗 -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="ChoiceBorder" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#9950677F" Offset="0"/>
                                                    <GradientStop Color="#CC647A94" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="ChoiceBorder" Property="BorderThickness" Value="2.2"/>
                                    </Trigger>

                                    <!-- Disable 時弄淡一點 -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="ChoiceBorder" Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <LinearGradientBrush x:Key="BattleCommandPanelBackground" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF6F8FF" Offset="0"/>
                    <GradientStop Color="#FFEBF0FF" Offset="1"/>
                </LinearGradientBrush>
                <!-- ===== 戰鬥指令按鈕：仙劍風底板 ===== -->
                <Style x:Key="BattleActionButtonBaseStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource StoryChoiceButtonStyle}"/>

                <!-- 攻擊：略帶紅銅色 -->
                <Style x:Key="BattleAttackButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BattleActionButtonBaseStyle}">
                    <Setter Property="BorderBrush" Value="#FFB7694E"/>
                </Style>

                <!-- 防禦：偏藍青色 -->
                <Style x:Key="BattleDefenseButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BattleActionButtonBaseStyle}">
                    <Setter Property="BorderBrush" Value="#FF5E8BAF"/>
                </Style>

                <!-- 技能：紫金色 -->
                <Style x:Key="BattleSkill1ButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource BattleActionButtonBaseStyle}">
                    <Setter Property="BorderBrush" Value="#FF8F6BC3"/>
                </Style>
                <Style x:Key="BattleSkill2ButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource BattleActionButtonBaseStyle}"/>
                <Style x:Key="BattleSkill3ButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource BattleActionButtonBaseStyle}"/>
                <Style x:Key="BattleSkill4ButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource BattleActionButtonBaseStyle}"/>

                <!-- 其他 / 道具 -->
                <Style x:Key="BattleUtilityButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BattleActionButtonBaseStyle}">
                    <Setter Property="BorderBrush" Value="#FF8C8C8C"/>
                </Style>
                <Style x:Key="BattleStatusCardStyle" TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                    <Setter Property="Padding" Value="16,12"/>
                    <Setter Property="Margin" Value="0,0,0,14"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                    <Setter Property="BorderBrush" Value="#33445C80"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#66111A2A" Offset="0"/>
                                <GradientStop Color="#99162138" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Grid.Resources>
            <Grid x:Name="StoryLayout">
                <Image x:Name="StoryBackgroundImage"
                       Stretch="UniformToFill"
                       Panel.ZIndex="0"/>

                <Border Background="#55000000"
                        Panel.ZIndex="1"/>

                <Image x:Name="StoryCharacterImage"
                       Panel.ZIndex="2"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="0,0,80,200"
                       Width="420"
                       Stretch="Uniform"/>

                <Border x:Name="StoryMenuContainer"
                        Panel.ZIndex="4"
                        Background="#55101520"
                        BorderBrush="#44FFFFFF"
                        BorderThickness="1"
                        CornerRadius="18"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="36"
                        Padding="12,16">
                    <StackPanel>
                        <Button x:Name="StoryMenuToggleButton"
                                Content="☰ 劇情選單"
                                Padding="14,8"
                                FontSize="16"
                                MinWidth="140"
                                Click="StoryMenuToggleButton_Click"/>
                        <StackPanel x:Name="StoryMenuButtonsPanel"
                                    Visibility="Collapsed"
                                    Margin="0,12,0,0">
                            <Button x:Name="StorySaveButton"
                                    Content="存檔"
                                    Padding="14,8"
                                    FontSize="16"
                                    MinWidth="140"
                                    Margin="0,0,0,10"
                                    Click="StorySaveButton_Click"/>
                            <Button x:Name="StoryBackButton"
                                    Content="返回主選單"
                                    Padding="14,8"
                                    FontSize="16"
                                    MinWidth="140"
                                    Click="StoryBackButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Panel.ZIndex="3"
                        Background="#CC101520"
                        BorderBrush="#55FFFFFF"
                        BorderThickness="1.4"
                        CornerRadius="28"
                        Margin="80,0,80,60"
                        VerticalAlignment="Bottom"
                        Padding="32,28">
                    <StackPanel>
                        <TextBlock x:Name="StoryTitleText"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#FFD7E1F9"
                                   Margin="0,0,0,12"/>
                        <TextBlock x:Name="StorySpeakerText"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#FFFFFFFF"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="StoryDialogueText"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   Foreground="#FFF2F6FF"
                                   Opacity="0.92"
                                   TextWrapping="Wrap"
                                   LineHeight="30"
                                   Margin="0,0,0,16"/>
                        <TextBlock x:Name="StoryStatusText"
                                   FontSize="16"
                                   Foreground="#FFA0B4D7"
                                   Margin="0,0,0,16"
                                   Visibility="Collapsed"/>
                        <StackPanel x:Name="StoryChoicesPanel"
                                    Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="StoryNextButton"
                                    Content="下一句"
                                    Padding="20,10"
                                    FontSize="18"
                                    MinWidth="140"
                                    Click="StoryNextButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ===== 戰鬥畫面層 ===== -->
            <Grid x:Name="BattleLayout"
                  Panel.ZIndex="21"
                  Background="#FF05060D" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image x:Name="BattleBackgroundImage"
                       Grid.RowSpan="2"
                       Stretch="UniformToFill"
                       Opacity="0.88"/>

                <Border Grid.RowSpan="2" Background="#66000000"/>

                <Grid x:Name="BattleCharacterLayer"
                      Grid.Row="0"
                      Panel.ZIndex="4"
                      IsHitTestVisible="False"
                      Margin="40,40,40,120">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          Margin="40,40,40,40"
                          VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image x:Name="BattlePlayerAvatar"
                               Grid.Column="0"
                               Height="340"
                               Stretch="Uniform"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="60,0,0,0"
                               Opacity="0.95"/>
                        <Image x:Name="BattleAllyAvatar"
                               Grid.Column="1"
                               Height="280"
                               Stretch="Uniform"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="40,0,0,0"
                               Opacity="0.9"/>
                    </Grid>

                    <Grid Grid.Column="1"
                          Margin="40,20,40,20">
                        <Image x:Name="BattleEnemyAvatar"
                               Height="420"
                               Stretch="Uniform"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Opacity="0.9"/>
                    </Grid>
                </Grid>

                <!-- 戰鬥標題與提示 -->
                <Border Grid.Row="0"
                        Margin="40,28,0,8"
                        Padding="18,14"
                        MaxWidth="520"
                        Background="#AA0B0F1C"
                        BorderBrush="#44FFFFFF"
                        BorderThickness="1.2"
                        CornerRadius="18"
                        Panel.ZIndex="5">
                    <StackPanel>
                        <TextBlock x:Name="BattleTitleText"
                                   FontSize="30"
                                   FontWeight="SemiBold"
                                   Foreground="#FFE6ECFF"/>
                        <TextBlock x:Name="BattlePromptText"
                                   FontSize="17"
                                   Foreground="#FFB8C7F5"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>


                <!-- 指令與對話區 -->
                <Grid Grid.Row="1"
                      Margin="40,0,40,24" 
                      Panel.ZIndex="5"
                      HorizontalAlignment="Stretch" VerticalAlignment="Top"
                     >
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Padding="10,8"
                            Background="#CC0B0F1C"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1.2"
                            CornerRadius="20"
                            HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                x:Name="BattleHealthPanel"
                                Orientation="Vertical"
                                Margin="0,0,0,6"
                                Visibility="Collapsed">
                                <TextBlock Text="HP 狀態"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#FFAAC4FF"
                                           Margin="0,0,0,4"/>
                                <StackPanel>
                                    <Grid x:Name="BattlePlayerHealthRow"
                                          Margin="0,6,0,0"
                                          Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0">
                                            <Border Width="10"
                                                    Height="10"
                                                    Background="#FF5EE2B8"
                                                    CornerRadius="5"/>
                                            <TextBlock x:Name="BattlePlayerHpLabel"
                                                       Text="玩家"
                                                       Margin="8,0,0,0"
                                                       Foreground="#FFEEF5FF"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <Grid Grid.Column="1"
                                              Height="16"
                                              VerticalAlignment="Center"
                                              ClipToBounds="True">
                                            <Border Background="#33223448"
                                                    CornerRadius="9"/>
                                            <Border x:Name="BattlePlayerHpFill"
                                                    Background="#FF46DEB2"
                                                    CornerRadius="9"
                                                    RenderTransformOrigin="0,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="BattlePlayerHpFillScale" ScaleX="1"/>
                                                </Border.RenderTransform>
                                            </Border>
                                        </Grid>
                                        <TextBlock x:Name="BattlePlayerHpValueText"
                                                   Grid.Column="2"
                                                   Margin="12,0,0,0"
                                                   Foreground="#FFEEF5FF"
                                                   FontWeight="Bold"/>
                                    </Grid>

                                    <Grid x:Name="BattleAllyHealthRow"
                                          Margin="0,8,0,0"
                                          Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0">
                                            <Border Width="10"
                                                    Height="10"
                                                    Background="#FF68B3FF"
                                                    CornerRadius="5"/>
                                            <TextBlock x:Name="BattleAllyHpLabel"
                                                       Text="夥伴"
                                                       Margin="8,0,0,0"
                                                       Foreground="#FFEEF5FF"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <Grid Grid.Column="1"
                                              Height="18"
                                              VerticalAlignment="Center"
                                              ClipToBounds="True">
                                            <Border Background="#33223448"
                                                    CornerRadius="9"/>
                                            <Border x:Name="BattleAllyHpFill"
                                                    Background="#FF60B9FF"
                                                    CornerRadius="9"
                                                    RenderTransformOrigin="0,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="BattleAllyHpFillScale" ScaleX="1"/>
                                                </Border.RenderTransform>
                                            </Border>
                                        </Grid>
                                        <TextBlock x:Name="BattleAllyHpValueText"
                                                   Grid.Column="2"
                                                   Margin="12,0,0,0"
                                                   Foreground="#FFEEF5FF"
                                                   FontWeight="Bold"/>
                                    </Grid>

                                    <Grid x:Name="BattleEnemyHealthRow"
                                          Margin="0,8,0,0"
                                          Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0">
                                            <Border Width="10"
                                                    Height="10"
                                                    Background="#FFFF8077"
                                                    CornerRadius="5"/>
                                            <TextBlock x:Name="BattleEnemyHpLabel"
                                                       Text="敵人"
                                                       Margin="8,0,0,0"
                                                       Foreground="#FFEEF5FF"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <Grid Grid.Column="1"
                                              Height="18"
                                              VerticalAlignment="Center"
                                              ClipToBounds="True">
                                            <Border Background="#33223448"
                                                    CornerRadius="9"/>
                                            <Border x:Name="BattleEnemyHpFill"
                                                    Background="#FFFF8B7E"
                                                    CornerRadius="9"
                                                    RenderTransformOrigin="0,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="BattleEnemyHpFillScale" ScaleX="1"/>
                                                </Border.RenderTransform>
                                            </Border>
                                        </Grid>
                                        <TextBlock x:Name="BattleEnemyHpValueText"
                                                   Grid.Column="2"
                                                   Margin="12,0,0,0"
                                                   Foreground="#FFEEF5FF"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock x:Name="BattleSpeakerText"
                                       Grid.Row="1"
                                       FontSize="21"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFFFF"
                                       Margin="0,4,0,4"/>
                            <TextBlock x:Name="BattleDialogueText"
                                       Grid.Row="2"
                                       FontSize="19"
                                       FontFamily="Consolas"
                                       Foreground="#FFF2F6FF"
                                       TextWrapping="Wrap"
                                       LineHeight="28"
                                       Opacity="0.95"
                                       Margin="0,0,0,6"/>
                            <StackPanel Grid.Row="3"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button x:Name="BattleNextButton"
                                        Content="下一句"
                                        Padding="14,6"
                                        FontSize="18"
                                        MinWidth="140"
                                        Click="BattleNextButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1"
                            Margin="20,0,0,0"
                            Padding="18,14"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource BattleCommandPanelBackground}"
                            BorderBrush="#FF8CA4E6"
                            BorderThickness="1.9"
                            CornerRadius="24">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="22"
                                              ShadowDepth="0"
                                              Color="#33000000"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Padding="12,8"
                                    CornerRadius="18"
                                    Background="#1919304A"
                                    BorderBrush="#2681A1E3"
                                    BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
                                        <Rectangle Width="10" Height="10" Fill="#FF8CA4E6" RadiusX="3" RadiusY="3"/>
                                        <TextBlock Text="指令清單"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#FF0B1020"
                                                   Margin="8,0,0,0"/>
                                    </StackPanel>
                                    <TextBlock Text="選擇要採取的行動"
                                               FontSize="16"
                                               Foreground="#FF29324F"
                                               Margin="0,0,0,4"/>
                                    <Rectangle Height="2"
                                               Fill="#338CA4E6"
                                               RadiusX="2"
                                               RadiusY="2"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="1"
                                Margin="0,10,0,0"
                                Padding="8"
                                CornerRadius="16"
                                Background="#CCF8FAFF"
                                BorderBrush="#558CA4E6"
                                BorderThickness="1">

                                <UniformGrid x:Name="BattleChoicesPanel"
                                             Columns="2"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Margin="8"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </Grid>
        </Grid>

        <!-- ===== 主畫面層 ===== -->
        <Grid x:Name="MainMenuLayer"
              Panel.ZIndex="10">
            <!-- ===== 主畫面 ===== -->
            <Rectangle Panel.ZIndex="1" Opacity="1">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF1E1E2E" Offset="0"/>
                        <GradientStop Color="#FF2A3B5A" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- 影片背景 -->
            <Border x:Name="VideoArea"
             Width="1455" Height="797"
             Panel.ZIndex="5"
             HorizontalAlignment="Left"
             VerticalAlignment="Top" BorderThickness="2" Margin="36,172,0,0"/>

            <!-- 左上 Logo / Title -->
            <StackPanel Panel.ZIndex="2" Orientation="Vertical" Margin="36,36,0,0"
              HorizontalAlignment="Left" VerticalAlignment="Top" Height="126" Width="579">
                <TextBlock Text="仙劍豹貓傳" FontSize="60" FontWeight="SemiBold" Foreground="White" Opacity="0.95"/>
                <TextBlock Text="執子之手，與子偕老；願共對清風朗月，長伴此生。" FontSize="24" Foreground="White" Opacity="0.75"/>
            </StackPanel>

            <!-- 右側主選單卡片 -->
            <Border Panel.ZIndex="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1510,387,0,0"
          Background="#66000000" CornerRadius="20" Padding="24" Width="400">
                <StackPanel>
                    <TextBlock Text="主選單" FontSize="32" Foreground="White" Margin="0,0,0,12"/>
                    <Separator Margin="0,0,0,8"/>
                    <Button  FontSize="26" Style="{StaticResource MenuButton}" Click="StartGame_Click">
                        <AccessText Text="_開始遊戲"/>
                    </Button>
                    <Button FontSize="26" Style="{StaticResource MenuButton}" Click="LoadGame_Click">
                        <AccessText Text="_載入遊戲"/>
                    </Button>
                    <Button FontSize="26" Style="{StaticResource MenuButton}" Click="OpenSettings_Click">
                        <AccessText Text="_設定"/>
                    </Button>
                    <Separator Margin="0,12,0,4"/>
                    <TextBlock Foreground="White" Opacity="0.7" FontSize="16"
                 Text="提示：Enter 確認，Esc 離開，F11 全螢幕。"/>
                </StackPanel>
            </Border>

            <!-- 中下版本資訊 -->
            <StackPanel Panel.ZIndex="1" Orientation="Vertical" Margin="0,1004,0,0"
              HorizontalAlignment="Center" VerticalAlignment="Top" Height="51" Width="488">
                <TextBlock Text="Ver 1.0" FontSize="20" FontWeight="SemiBold" Foreground="White" Opacity="0.95"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="BillShiau | WPF .NET 9" FontSize="10" Foreground="White" Opacity="0.75"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <!--提示詞-->
            <TextBlock Text="測試版本，非正式畫面。"  FontSize="24" Foreground="White" Opacity="0.9" Margin="1500,1000,0,0" VerticalAlignment="Top">
            </TextBlock>

            <!--標題圖片-->
            <Image Panel.ZIndex="3" HorizontalAlignment="Left" Height="64" Margin="20,45,0,0" VerticalAlignment="Top" Width="58" Source="/Assets/Image/Sword.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-108.579"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Grid>

        <!-- ===== 載入存檔 Popup ===== -->
        <Grid x:Name="LoadPopup"
              Visibility="Collapsed"
              Panel.ZIndex="99"
              IsHitTestVisible="True">
            <!-- 更深的遮罩：80% 黑，確保底層幾乎看不見 -->
            <Rectangle Fill="#CC000000"/>
            <!-- #CC = 80% 透明度 -->

            <!-- 置中主卡片 -->
            <Border Width="1020"
              CornerRadius="20"
              Padding="24"
              Background="#F0151E2E"
              BorderBrush="#66FFFFFF"
              BorderThickness="1.2"
              HorizontalAlignment="Center"
              VerticalAlignment="Center" Cursor="">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 標題列 -->
                    <DockPanel>
                        <TextBlock Text="存檔管理"
                   Foreground="White"
                   FontSize="40"
                   FontWeight="Bold"
                   DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <!-- 右上角關閉（之後在 code-behind 綁事件就好） -->
                            <Button x:Name="BtnLoadClose"
                  Content="關閉"
                  Padding="14,8"
                  FontSize="16"
                  MinWidth="96"
                  Foreground="White"
                  BorderThickness="0"
                  Margin="700,0,0,0"
                  Cursor="Hand" Click="BtnLoadClose_Click" Background="#66FF1313">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                            <ContentPresenter Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <!-- 提示 -->
                    <TextBlock Grid.Row="1"
                 Text="最多 3 個存檔位置"
                 Foreground="#CCFFFFFF"
                 Opacity="0.85" Margin="0,0,0,586" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.098"/>
                                <RotateTransform/>
                                <TranslateTransform Y="-0.832"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <!-- 三個存檔槽 -->
                    <StackPanel Grid.Row="2" Margin="0,8,0,12">
                        <!-- Slot 樣式：共用 -->
                        <StackPanel.Resources>
                            <Style x:Key="SaveSlotCard" TargetType="Border">
                                <Setter Property="CornerRadius" Value="16"/>
                                <Setter Property="Background" Value="#33000000"/>
                                <Setter Property="BorderBrush" Value="#40FFFFFF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="16"/>
                                <Setter Property="Margin" Value="0,8,0,8"/>
                            </Style>
                            <Style x:Key="PrimaryButton" TargetType="Button">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                <Setter Property="Padding" Value="14,8"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="MinWidth" Value="96"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                                <ContentPresenter Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Style>
                            <Style x:Key="HintText" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#CCFFFFFF"/>
                                <Setter Property="Opacity" Value="0.85"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Slot 1 -->
                        <Border Style="{StaticResource SaveSlotCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 縮圖 -->
                                <Border Grid.Column="0" CornerRadius="12" Background="#22000000" Height="140" HorizontalAlignment="Left">
                                    <Image x:Name="Save1_Img" Stretch="UniformToFill" ClipToBounds="True" Source="/Assets/Image/Sword.png" Visibility="Collapsed"/>
                                </Border>

                                <!-- 內容 -->
                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Save1_Title" Text="存檔 1 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Save1_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="Save1_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- 操作 -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button x:Name="Save1_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False" Background="#FFDDDDDD" Foreground="#FF3A3A3A"/>
                                    <Button x:Name="Save1_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False" Click="Save1_BtnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Slot 2 -->
                        <Border Style="{StaticResource SaveSlotCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" CornerRadius="12" Background="#22000000" Height="140" HorizontalAlignment="Left">
                                    <Image x:Name="Save2_Img" Stretch="UniformToFill" ClipToBounds="True" Source="/Assets/Image/Sword.png" Visibility="Collapsed"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Save2_Title" Text="存檔 2 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Save2_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="Save2_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button x:Name="Save2_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False" Background="#FFDDDDDD" Foreground="#FF3A3A3A"/>
                                    <Button x:Name="Save2_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False" Click="Save2_BtnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Slot 3 -->
                        <Border Style="{StaticResource SaveSlotCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 縮圖 -->
                                <Border Grid.Column="0" CornerRadius="12" Background="#22000000" Height="140" HorizontalAlignment="Left">
                                    <Image x:Name="Save3_Img" Stretch="UniformToFill" ClipToBounds="True" Source="/Assets/Image/Sword.png" Visibility="Collapsed"/>
                                </Border>

                                <!-- 內容 -->
                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Save3_Title" Text="存檔 1 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Save3_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="Save3_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- 操作 -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button x:Name="Save3_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False" Background="#FFDDDDDD" Foreground="#FF3A3A3A"/>
                                    <Button x:Name="Save3_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False" Click="Save3_BtnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 底部提示 -->
                    <TextBlock Grid.Row="3"
                 Text="提示：Esc 關閉"
                 Foreground="#CCFFFFFF"
                 Opacity="0.85"
                 HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== 設定彈窗 ===== -->
        <Grid x:Name="SettingsPopup"
      Background="#AA000000"
      Visibility="Collapsed"
      Panel.ZIndex="99">
            <Border Width="400" Height="250"
            Background="#FF2A3B5A"
            CornerRadius="16"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
                <Border.Effect>
                    <DropShadowEffect BlurRadius="24"
                          ShadowDepth="0"
                          Opacity="0.55"/>
                </Border.Effect>
                <StackPanel>
                    <!-- 標題 -->
                    <TextBlock Text="設定"
                       FontSize="28"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                    <!-- 聲音設定 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="音量：" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                        <Slider x:Name="VolumeSlider"
                        Minimum="0" Maximum="100" Value="75"
                        Width="200"
                        TickFrequency="10"
                        IsSnapToTickEnabled="True"
                        Margin="10,0,0,0"
                        ValueChanged="VolumeSlider_ValueChanged"/>
                        <TextBlock x:Name="VolumeLabel"
                           Text="75"
                           FontSize="20"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 關閉按鈕 -->
                    <Button Content="關閉"
                    Width="100" Height="40"
                    FontSize="18"
                    HorizontalAlignment="Center"
                    Click="CloseSettings_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</Window>