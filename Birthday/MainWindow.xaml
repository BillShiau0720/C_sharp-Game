<Window x:Class="Birthday.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Birthday"
        mc:Ignorable="d"
        Title="仙劍豹貓傳"
        WindowState="Maximized"
        Width="1920" Height="1080" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlAcrylicWindowBrush}">

    <Grid>
        <!-- ===== 劇情遊戲層 ===== -->
        <Grid x:Name="GameLayer"
              Visibility="Collapsed"
              Panel.ZIndex="20"
              PreviewMouseDown="GameLayer_PreviewMouseDown">
            <Grid.Resources>
                <Style x:Key="StoryChoiceButtonStyle" TargetType="Button">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#55202A3E" Offset="0"/>
                                <GradientStop Color="#77304058" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#5586A6FF"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                    <Setter Property="Foreground" Value="#FFF4F7FF"/>
                    <Setter Property="FontFamily" Value="Consolas"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Padding" Value="20,18,24,18"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="ChoiceBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="0"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ChoiceBorder" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#772C3C5C" Offset="0"/>
                                                    <GradientStop Color="#AA3C5180" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="ChoiceBorder" Property="BorderBrush" Value="#FF9FC4FF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="ChoiceBorder" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#99203045" Offset="0"/>
                                                    <GradientStop Color="#CC324268" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="ChoiceBorder" Property="BorderBrush" Value="#FFC4DAFF"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid x:Name="StoryLayout">
                <Image x:Name="StoryBackgroundImage"
                       Stretch="UniformToFill"
                       Panel.ZIndex="0"/>

                <Border Background="#55000000"
                        Panel.ZIndex="1"/>

                <Image x:Name="StoryCharacterImage"
                       Panel.ZIndex="2"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="0,0,80,200"
                       Width="420"
                       Stretch="Uniform"/>

                <Border x:Name="StoryMenuContainer"
                        Panel.ZIndex="4"
                        Background="#55101520"
                        BorderBrush="#44FFFFFF"
                        BorderThickness="1"
                        CornerRadius="18"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="36"
                        Padding="12,16">
                    <StackPanel>
                        <Button x:Name="StoryMenuToggleButton"
                                Content="☰ 劇情選單"
                                Padding="14,8"
                                FontSize="16"
                                MinWidth="140"
                                Click="StoryMenuToggleButton_Click"/>
                        <StackPanel x:Name="StoryMenuButtonsPanel"
                                    Visibility="Collapsed"
                                    Margin="0,12,0,0">
                            <Button x:Name="StorySaveButton"
                                    Content="存檔"
                                    Padding="14,8"
                                    FontSize="16"
                                    MinWidth="140"
                                    Margin="0,0,0,10"
                                    Click="StorySaveButton_Click"/>
                            <Button x:Name="StoryBackButton"
                                    Content="返回主選單"
                                    Padding="14,8"
                                    FontSize="16"
                                    MinWidth="140"
                                    Click="StoryBackButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Panel.ZIndex="3"
                        Background="#CC101520"
                        BorderBrush="#55FFFFFF"
                        BorderThickness="1.4"
                        CornerRadius="28"
                        Margin="80,0,80,60"
                        VerticalAlignment="Bottom"
                        Padding="32,28">
                    <StackPanel>
                        <TextBlock x:Name="StoryTitleText"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#FFD7E1F9"
                                   Margin="0,0,0,12"/>
                        <TextBlock x:Name="StorySpeakerText"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#FFFFFFFF"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="StoryDialogueText"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   Foreground="#FFF2F6FF"
                                   Opacity="0.92"
                                   TextWrapping="Wrap"
                                   LineHeight="30"
                                   Margin="0,0,0,16"/>
                        <TextBlock x:Name="StoryStatusText"
                                   FontSize="16"
                                   Foreground="#FFA0B4D7"
                                   Margin="0,0,0,16"
                                   Visibility="Collapsed"/>
                        <StackPanel x:Name="StoryChoicesPanel"
                                    Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="StoryNextButton"
                                    Content="下一句"
                                    Padding="20,10"
                                    FontSize="18"
                                    MinWidth="140"
                                    Click="StoryNextButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ===== 戰鬥畫面層 ===== -->
            <Grid x:Name="BattleLayout"
                  Visibility="Collapsed"
                  Panel.ZIndex="21"
                  Background="#EE0A0E18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image x:Name="BattleBackgroundImage"
                       Stretch="UniformToFill"
                       Opacity="0.88"/>

                <Border Background="#66000000"/>

                <!-- 狀態區 -->
                <Grid Grid.Row="0"
                      Margin="38,24,38,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Vertical">
                        <TextBlock x:Name="BattleTitleText"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   Foreground="#FFD7E1F9"/>
                        <TextBlock x:Name="BattlePromptText"
                                   FontSize="18"
                                   Foreground="#FFA6B8DF"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                Background="#33101720"
                                >
                        <TextBlock Text="戰鬥狀態"
                                   FontSize="18"
                                   Foreground="#FFEDF3FF"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="BattlePlayerStatusText"
                                   FontSize="16"
                                   Foreground="#FFF2F6FF"/>
                        <TextBlock x:Name="BattleAllyStatusText"
                                   FontSize="16"
                                   Foreground="#FFAED0FF"/>
                        <TextBlock x:Name="BattleEnemyStatusText"
                                   FontSize="16"
                                   Foreground="#FFFFC0C0"/>
                    </StackPanel>
                </Grid>

                <!-- 戰鬥人物展示 -->
                <Grid Grid.Row="1"
                      Margin="32,0,32,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="0,0,32,0">
                        <Image x:Name="BattlePlayerAvatar"
                               Height="360"
                               Stretch="Uniform"/>
                        <Image x:Name="BattleAllyAvatar"
                               Height="220"
                               Stretch="Uniform"
                               Opacity="0.85"
                               Margin="0,12,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="32,0,0,0">
                        <Image x:Name="BattleEnemyAvatar"
                               Height="380"
                               Stretch="Uniform"
                               HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- 指令與對話區 -->
                <Border Grid.Row="2"
                        Background="#CC101520"
                        BorderBrush="#55FFFFFF"
                        BorderThickness="1.4"
                        CornerRadius="28"
                        Margin="48,0,48,48"
                        Padding="28,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.4*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock x:Name="BattleSpeakerText"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFFFF"
                                       Margin="0,0,0,6"/>
                            <TextBlock x:Name="BattleDialogueText"
                                       FontSize="19"
                                       FontFamily="Consolas"
                                       Foreground="#FFF2F6FF"
                                       TextWrapping="Wrap"
                                       LineHeight="30"
                                       Opacity="0.92"
                                       Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    x:Name="BattleChoicesPanel"
                                    VerticalAlignment="Top"
                                    />

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">
                            <Button x:Name="BattleNextButton"
                                    Content="下一句"
                                    Padding="20,10"
                                    FontSize="18"
                                    MinWidth="140"
                                    Click="BattleNextButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- ===== 主畫面層 ===== -->
        <Grid x:Name="MainMenuLayer"
              Panel.ZIndex="10">
            <!-- ===== 主畫面 ===== -->
            <Rectangle Panel.ZIndex="1" Opacity="1">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF1E1E2E" Offset="0"/>
                        <GradientStop Color="#FF2A3B5A" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- 影片背景 -->
            <Border x:Name="VideoArea"
             Width="1455" Height="797"
             Panel.ZIndex="5"
             HorizontalAlignment="Left"
             VerticalAlignment="Top" BorderThickness="2" Margin="36,172,0,0"/>

            <!-- 左上 Logo / Title -->
            <StackPanel Panel.ZIndex="2" Orientation="Vertical" Margin="36,36,0,0"
              HorizontalAlignment="Left" VerticalAlignment="Top" Height="126" Width="579">
                <TextBlock Text="仙劍豹貓傳" FontSize="60" FontWeight="SemiBold" Foreground="White" Opacity="0.95"/>
                <TextBlock Text="執子之手，與子偕老；願共對清風朗月，長伴此生。" FontSize="24" Foreground="White" Opacity="0.75"/>
            </StackPanel>

            <!-- 右側主選單卡片 -->
            <Border Panel.ZIndex="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1510,387,0,0"
          Background="#66000000" CornerRadius="20" Padding="24" Width="400">
                <StackPanel>
                    <TextBlock Text="主選單" FontSize="32" Foreground="White" Margin="0,0,0,12"/>
                    <Separator Margin="0,0,0,8"/>
                    <Button  FontSize="26" Style="{StaticResource MenuButton}" Click="StartGame_Click">
                        <AccessText Text="_開始遊戲"/>
                    </Button>
                    <Button FontSize="26" Style="{StaticResource MenuButton}" Click="LoadGame_Click">
                        <AccessText Text="_載入遊戲"/>
                    </Button>
                    <Button FontSize="26" Style="{StaticResource MenuButton}" Click="OpenSettings_Click">
                        <AccessText Text="_設定"/>
                    </Button>
                    <Separator Margin="0,12,0,4"/>
                    <TextBlock Foreground="White" Opacity="0.7" FontSize="16"
                 Text="提示：Enter 確認，Esc 離開，F11 全螢幕。"/>
                </StackPanel>
            </Border>

            <!-- 中下版本資訊 -->
            <StackPanel Panel.ZIndex="1" Orientation="Vertical" Margin="0,1004,0,0"
              HorizontalAlignment="Center" VerticalAlignment="Top" Height="51" Width="488">
                <TextBlock Text="Ver 1.0" FontSize="20" FontWeight="SemiBold" Foreground="White" Opacity="0.95"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="BillShiau | WPF .NET 9" FontSize="10" Foreground="White" Opacity="0.75"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <!--提示詞-->
            <TextBlock Text="測試版本，非正式畫面。"  FontSize="24" Foreground="White" Opacity="0.9" Margin="1500,1000,0,0" VerticalAlignment="Top">
            </TextBlock>

            <!--標題圖片-->
            <Image Panel.ZIndex="3" HorizontalAlignment="Left" Height="64" Margin="20,45,0,0" VerticalAlignment="Top" Width="58" Source="/Assets/Image/Sword.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-108.579"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Grid>

        <!-- ===== 載入存檔 Popup ===== -->
        <Grid x:Name="LoadPopup"
              Visibility="Collapsed"
              Panel.ZIndex="99"
              IsHitTestVisible="True">
            <!-- 更深的遮罩：80% 黑，確保底層幾乎看不見 -->
            <Rectangle Fill="#CC000000"/>
            <!-- #CC = 80% 透明度 -->

            <!-- 置中主卡片 -->
            <Border Width="1020"
              CornerRadius="20"
              Padding="24"
              Background="#F0151E2E"
              BorderBrush="#66FFFFFF"
              BorderThickness="1.2"
              HorizontalAlignment="Center"
              VerticalAlignment="Center" Cursor="">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 標題列 -->
                    <DockPanel>
                        <TextBlock Text="存檔管理"
                   Foreground="White"
                   FontSize="40"
                   FontWeight="Bold"
                   DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <!-- 右上角關閉（之後在 code-behind 綁事件就好） -->
                            <Button x:Name="BtnLoadClose"
                  Content="關閉"
                  Padding="14,8"
                  FontSize="16"
                  MinWidth="96"
                  Foreground="White"
                  BorderThickness="0"
                  Margin="700,0,0,0"
                  Cursor="Hand" Click="BtnLoadClose_Click" Background="#66FF1313">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                            <ContentPresenter Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <!-- 提示 -->
                    <TextBlock Grid.Row="1"
                 Text="最多 3 個存檔位置"
                 Foreground="#CCFFFFFF"
                 Opacity="0.85" Margin="0,0,0,586" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.098"/>
                                <RotateTransform/>
                                <TranslateTransform Y="-0.832"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <!-- 三個存檔槽 -->
                    <StackPanel Grid.Row="2" Margin="0,8,0,12">
                        <!-- Slot 樣式：共用 -->
                        <StackPanel.Resources>
                            <Style x:Key="SaveSlotCard" TargetType="Border">
                                <Setter Property="CornerRadius" Value="16"/>
                                <Setter Property="Background" Value="#33000000"/>
                                <Setter Property="BorderBrush" Value="#40FFFFFF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="16"/>
                                <Setter Property="Margin" Value="0,8,0,8"/>
                            </Style>
                            <Style x:Key="PrimaryButton" TargetType="Button">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                <Setter Property="Padding" Value="14,8"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="MinWidth" Value="96"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                                <ContentPresenter Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Style>
                            <Style x:Key="HintText" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#CCFFFFFF"/>
                                <Setter Property="Opacity" Value="0.85"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Slot 1 -->
                        <Border Style="{StaticResource SaveSlotCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 縮圖 -->
                                <Border Grid.Column="0" CornerRadius="12" Background="#22000000" Height="140" HorizontalAlignment="Left">
                                    <Image x:Name="Save1_Img" Stretch="UniformToFill" ClipToBounds="True" Source="/Assets/Image/Sword.png" Visibility="Collapsed"/>
                                </Border>

                                <!-- 內容 -->
                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Save1_Title" Text="存檔 1 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Save1_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="Save1_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- 操作 -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button x:Name="Save1_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False" Background="#FFDDDDDD" Foreground="#FF3A3A3A"/>
                                    <Button x:Name="Save1_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False" Click="Save1_BtnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Slot 2 -->
                        <Border Style="{StaticResource SaveSlotCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" CornerRadius="12" Background="#22000000" Height="140" HorizontalAlignment="Left">
                                    <Image x:Name="Save2_Img" Stretch="UniformToFill" ClipToBounds="True" Source="/Assets/Image/Sword.png" Visibility="Collapsed"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Save2_Title" Text="存檔 2 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Save2_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="Save2_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button x:Name="Save2_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False" Background="#FFDDDDDD" Foreground="#FF3A3A3A"/>
                                    <Button x:Name="Save2_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False" Click="Save2_BtnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Slot 3 -->
                        <Border Style="{StaticResource SaveSlotCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 縮圖 -->
                                <Border Grid.Column="0" CornerRadius="12" Background="#22000000" Height="140" HorizontalAlignment="Left">
                                    <Image x:Name="Save3_Img" Stretch="UniformToFill" ClipToBounds="True" Source="/Assets/Image/Sword.png" Visibility="Collapsed"/>
                                </Border>

                                <!-- 內容 -->
                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Save3_Title" Text="存檔 1 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Save3_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="Save3_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- 操作 -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button x:Name="Save3_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False" Background="#FFDDDDDD" Foreground="#FF3A3A3A"/>
                                    <Button x:Name="Save3_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False" Click="Save3_BtnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 底部提示 -->
                    <TextBlock Grid.Row="3"
                 Text="提示：Esc 關閉"
                 Foreground="#CCFFFFFF"
                 Opacity="0.85"
                 HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== 設定彈窗 ===== -->
        <Grid x:Name="SettingsPopup"
      Background="#AA000000"
      Visibility="Collapsed"
      Panel.ZIndex="99">
            <Border Width="400" Height="250"
            Background="#FF2A3B5A"
            CornerRadius="16"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
                <Border.Effect>
                    <DropShadowEffect BlurRadius="24"
                          ShadowDepth="0"
                          Opacity="0.55"/>
                </Border.Effect>
                <StackPanel>
                    <!-- 標題 -->
                    <TextBlock Text="設定"
                       FontSize="28"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                    <!-- 聲音設定 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="音量：" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                        <Slider x:Name="VolumeSlider"
                        Minimum="0" Maximum="100" Value="75"
                        Width="200"
                        TickFrequency="10"
                        IsSnapToTickEnabled="True"
                        Margin="10,0,0,0"
                        ValueChanged="VolumeSlider_ValueChanged"/>
                        <TextBlock x:Name="VolumeLabel"
                           Text="75"
                           FontSize="20"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 關閉按鈕 -->
                    <Button Content="關閉"
                    Width="100" Height="40"
                    FontSize="18"
                    HorizontalAlignment="Center"
                    Click="CloseSettings_Click"/>
