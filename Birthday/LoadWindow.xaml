<Window x:Name="LoadSaveWindow" x:Class="Birthday.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Birthday"
        mc:Ignorable="d"
        Title="載入遊戲"
        Width="1280" Height="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource SystemControlAcrylicElementBrush}" WindowStyle="None" Loaded="LoadSaveWindow_Loaded">
    <Window.Resources>
        <!-- 主要按鈕：同色系圓角 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinWidth" Value="96"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 次要按鈕（刪除、返回） -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#33FFFFFF"/>
        </Style>

        <!-- 儲存槽卡片 -->
        <Style x:Key="SaveSlotCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="#66000000"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="HintText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="Opacity" Value="0.85"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 背景：與主畫面一致的深色漸層 -->
        <Rectangle Panel.ZIndex="0">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1E1E2E" Offset="0"/>
                    <GradientStop Color="#FF2A3B5A" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- 置中主卡片 -->
        <Border Panel.ZIndex="1"
                Background="#66000000"
                CornerRadius="20"
                Padding="24"
                Width="1020"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 標題列 -->
                <DockPanel>
                    <TextBlock Text="載入遊戲" Foreground="White" FontSize="32" FontWeight="Bold" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button x:Name="BtnBack" Content="返回" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </DockPanel>

                <!-- 提示 -->
                <TextBlock Grid.Row="1" Text="最多 3 個存檔位置" Style="{StaticResource HintText}"/>

                <!-- 三個儲存槽 -->
                <StackPanel Grid.Row="2" Margin="0,8,0,8">
                    <!-- Slot 1（示例：有存檔） -->
                    <Border Style="{StaticResource SaveSlotCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 縮圖 -->
                            <Border Grid.Column="0" CornerRadius="12" Background="#33000000" Height="140" HorizontalAlignment="Left">
                                <Image x:Name="Save1_Img" Stretch="UniformToFill" Source="/Assets/Image/Sword.png" ClipToBounds="True" Visibility="Collapsed"/>
                            </Border>

                            <!-- 資訊 -->
                            <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                <TextBlock x:Name="Save1_Title" Text="存檔 1 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                <TextBlock x:Name="Save1_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                <TextBlock x:Name="Save1_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- 按鈕 -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="Save1_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False"/>
                                <Button x:Name="Save1_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Slot 2（示例：有存檔） -->
                    <Border Style="{StaticResource SaveSlotCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" CornerRadius="12" Background="#33000000" Height="140" HorizontalAlignment="Left">
                                <Image x:Name="Save2_Img" Stretch="UniformToFill" Source="/Assets/Image/Sword.png" ClipToBounds="True" Visibility="Collapsed"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                <TextBlock x:Name="Save2_Title" Text="存檔 2 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                <TextBlock x:Name="Save2_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                <TextBlock x:Name="Save2_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="Save2_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" IsEnabled="False"/>
                                <Button x:Name="Save2_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Slot 3（示例：空存檔） -->
                    <Border Style="{StaticResource SaveSlotCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 縮圖 -->
                            <Border Grid.Column="0" CornerRadius="12" Background="#33000000" Height="140" HorizontalAlignment="Left">
                                <Image x:Name="Save3_Img" Stretch="UniformToFill" Source="/Assets/Image/Sword.png" ClipToBounds="True" Visibility="Collapsed"/>
                            </Border>

                            <!-- 資訊 -->
                            <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                <TextBlock x:Name="Save3_Title" Text="存檔 3 ( 空 ) " Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                <TextBlock x:Name="Save3_Chapter" Text="尚未存檔" Style="{StaticResource HintText}" Margin="0,4,0,0"/>
                                <TextBlock x:Name="Save3_LastSaveTime" Text="" Style="{StaticResource HintText}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- 按鈕 -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="Save3_BtnLoad" Content="載入" Style="{StaticResource PrimaryButton}" Background="#FFDDDDDD" IsEnabled="False"/>
                                <Button x:Name="Save3_BtnDelete" Content="刪除" Style="{StaticResource SecondaryButton}" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- 底部提示 -->
                <TextBlock Grid.Row="3" Text="提示：可用↑↓選擇、Enter 載入、Del 刪除"
                           Style="{StaticResource HintText}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
